<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" 
    android:id="@+id/mainlayout">
 
  <TextView
      android:id="@+id/textView1a"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:layout_marginLeft="5px"
      android:layout_marginRight="5px"
      android:textColor="#000000"
      android:text="Feedback"
      android:textAppearance="?android:attr/textAppearanceLarge" />
  
  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#000000"
      android:layout_marginLeft="5px"
      android:layout_marginRight="5px"
      android:text="Please provide feedback on the following days:"
      android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#000000"
      android:layout_marginLeft="5px"
      android:layout_marginRight="5px"
      android:text="(click on the date to answer the questions)"
      android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ListView
      android:id="@+id/list2"
      android:layout_marginLeft="5px"
      android:layout_marginRight="5px"
      android:layout_width="fill_parent"
      android:layout_height="230dp" 
      android:cacheColorHint="#00000000" 
      android:background="@drawable/border_ui"
      android:fadeScrollbars="false"/>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_margin="5px"
        android:gravity="bottom"
        android:orientation="vertical">
        
        
	  	<TextView
      		android:id="@+id/textView3a"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#000000"
      		android:text="Data Collector info"
      		android:textAppearance="?android:attr/textAppearanceLarge" />
        
    	<TextView
      		android:id="@+id/textView3"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:textColor="#000000"
      		android:text="List of running sensors:"
      		android:textAppearance="?android:attr/textAppearanceSmall" />
    
    	<ListView
      		android:id="@+id/list"
      		android:layout_width="fill_parent"
      		android:layout_height="80dp" 
      		android:cacheColorHint="#00000000"
      		android:background="@drawable/border_ui" 
      		android:fadeScrollbars="false" />
	
    
		<LinearLayout android:orientation="horizontal"
            android:layout_marginTop="5px"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content">    
  			
  			<Button
      			android:id="@+id/button1"
      			android:layout_width="fill_parent"
      			android:layout_height="30px"
      			android:textSize="10px"
      			android:text="Start Sampling"
      			android:layout_gravity="bottom"
      			android:layout_weight="1" />
  
		  	<Button
    			android:id="@+id/button2"
      			android:layout_width="fill_parent"
      			android:layout_height="30px"
      			android:textSize="10px"
      			android:text="Stop Sampling"
      			android:layout_gravity="bottom"
      			android:layout_weight="1" />
    	</LinearLayout>
    </LinearLayout>
  
</LinearLayout>

